<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/AppColor</item>
        <item name="colorPrimaryVariant">?attr/AppColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="AppColor">@color/app_btn</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Scheme1" parent="Theme.MusicPlayer">
        <item name="AppColor">@color/app_btn</item>
    </style>
    <style name="Scheme2" parent="Theme.MusicPlayer">

        <item name="AppColor">@color/app_color2</item>
    </style>
    <style name="Scheme3" parent="Theme.MusicPlayer">
        <item name="AppColor">@color/app_color3</item>
    </style>
    <style name="Scheme4" parent="Theme.MusicPlayer">
        <item name="AppColor">@color/app_color4</item>
    </style>
    <style name="Scheme5" parent="Theme.MusicPlayer">
        <item name="AppColor">@color/app_color5</item>
    </style>
    <style name="Scheme6" parent="Theme.MusicPlayer">
        <item name="AppColor">@color/app_color6</item>
    </style>
    <style name="CircularImage" parent="Theme.MusicPlayer">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>